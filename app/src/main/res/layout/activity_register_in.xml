<?xml version="1.0" encoding="utf-8"?>
<!--注册界面-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_register_in"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="80dp"
        android:onClick="textView"
        android:text="@string/title_register_in"
        android:textColor="@color/black"
        android:textSize="50dp" />

    <EditText
        android:id="@+id/user_phonenumber"
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:inputType="text"
        android:lines="1"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:hint="@string/user_phonenumber"
        android:theme="@style/EditViewTheme"/>

    <EditText
        android:id="@+id/user_name_id"
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:inputType="text"
        android:lines="1"
        android:layout_gravity="center_horizontal"
        android:hint="@string/user_name_id"
        android:theme="@style/EditViewTheme"/>

    <EditText
        android:id="@+id/user_password"
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:inputType="textPassword"
        android:lines="1"
        android:layout_gravity="center_horizontal"
        android:hint="@string/password_register"
        android:theme="@style/EditViewTheme"/>


    <Button
        android:id="@+id/btn_register_in"
        android:layout_width="190dp"
        android:layout_height="50dp"
        android:text="@string/title_register_in"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginTop="45dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/btn_rectangle_theme" />

    <TextView
        android:id="@+id/user_sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/user_sign_in"
        android:textColor="@color/colorPrimary"
        android:layout_gravity="center"
        android:onClick="textView"/>

</LinearLayout>
